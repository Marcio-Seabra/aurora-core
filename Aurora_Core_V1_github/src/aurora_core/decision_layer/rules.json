{
  "memory_rules": {
    "store_if": [
      "preferencia",
      "decisao",
      "definicao_de_projeto"
    ]
  },
  "response_modes": [
    "natural",
    "analitico",
    "estruturado"
  ],
  "route_rules": [
    {
      "keywords": ["imagem", "desenhe", "render", "ilustracao"],
      "route": "image",
      "mode": "natural",
      "reason": "image_request"
    },
    {
      "keywords": ["video", "animacao", "clipe"],
      "route": "video",
      "mode": "natural",
      "reason": "video_request"
    },
    {
      "keywords": ["planilha", "tabela", "excel", "csv"],
      "route": "tool",
      "mode": "estruturado",
      "reason": "data_task"
    }
  ]
}
